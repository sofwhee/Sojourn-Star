<% content_for :page_obj do %>
  <% @page = Chapter.last.pages.sorted.first %>
<% end %>

<%= stylesheet_link_tag "page" %>

<div id="posteddate">
  <li>Posted</li>
  <li><%= @page.published_at.strftime("%d/%m/%Y") %></li>
</div>

<%= render "shared/page_image" %>
<%= render "shared/edit_button" %>

<div id="pageandchapter">
  <li id="pagenum"><%= "Page #{@page.page_number}"%> </li>
  <li><%= "Chapter #{@page.chapter.chapter_number}" %> </li>
</div>

<%= render "shared/comic_navigation" %>