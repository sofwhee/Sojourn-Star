<div id="fullwrap">

<a id="comictitle" href=<%= home_index_path %>>Sojourn Star</a>
<%# <div><%= link_to image_tag(), home_index_path %></div> %>

<% @page = Chapter.last.pages.first %>

<div id="sitenavigation">
  <%= link_to "Archive", pages_path, class: "link-text" %>
</div>

<div id="posteddate">
</div>

<div id="cpage">
  <% if @page %>
    <%= image_tag(url_for(@page.page_image), title: @page.page_number.to_s, id: "comic_image") %>
  <% end %>
</div>

<div id="comicnavigation">
  <%= link_to_if @page.first, "First",         @page.first, class: "navbutton" %>
  <%= link_to_if @page.previous, "Previous",  @page.previous, class: "navbutton" %>
  <%= link_to_if @page.next, "Next",          @page.next, class: "navbutton" %>
  <%= link_to_if @page.last, "Last",           @page.last, class: "navbutton" %>
</div>

<div id="pageandchapter">
  <% if @page %>
  <%# <%= "Page #{@page.page_number.to_s} Chapter #{@page.chapter.chapter_number.to_s}" %> %>
  <% end %>
</div>

<div id="socials">
  <div id="links">
    <a id="patreon">Patreon</a>
    <a id="twitch">Twitch</a>
    <a id="twitter">Twitter</a>
    <a id="instagram">Instagram</a>
  </div>
</div>

<%# fullwrap end %>
</div> 