
<% if admin_signed_in? %>
  <% @pages.each do |page| %>

    <% if page.invalid? %>
      <%= link_to "Invalid page?", page.edit %>
      <% next %>
    <%end %>

    <% if page.draft? %>
      <h1>Draft</h1>
    <% end %>

    <% if page.scheduled? %>
      <p>scheduled</p>
    <% end %>

    <div><%= link_to image_tag(page.page_image.representation(resize_to_limit: [100, 100])), page %></div>
    <div>Chapter <%= page.chapter %></div>
    <div><%= link_to page.page_number, page %></div>

  <% end %>
  
  <%= link_to "New page", new_page_path %>

<% else %>
  <% @pages.each do |page| %>

    <% if page.invalid? %>
      <% next %>
    <%end %>

    <div><%= link_to image_tag(page.page_image.representation(resize_to_limit: [100, 100])), page %></div>
    <div>Chapter <%= page.chapter %></div>
    <div><%= link_to page.page_number, page %></div>

  <% end %>
<% end%>