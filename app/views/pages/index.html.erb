<%= stylesheet_link_tag "archive" %>

<div id="fullwrap">

<%= link_to_if @page.first, image_tag("titlecard.png"), home_index_path, id: "comictitle" %>

<div id="chapterswrap">
<% @chapters.sorted.each do |chapter| %>

  <div class="chaptertitle"><%= "#{chapter.chapter_number} - #{chapter.name}" %>
    <% if admin_signed_in? %>
      <%= link_to "Edit", edit_chapter_path(chapter) %>
    <% end %>
  </div>

  <% chapter.pages.sorted.each do |page| %>
    
    <div><%= link_to image_tag(page.page_image.representation(resize_to_limit: [100, 100])), page %></div>
    <div><%= link_to page.page_number, page %></div>

    <% if page.invalid? || page.draft? || page.scheduled? %>
      <% next %>
    <% end %>

    <% if admin_signed_in? %>
      <%= tag.p 'Draft' class: 'adminonlypageinfo' if page.draft? %>
      <%= tag.p 'Scheduled' class: 'adminonlypageinfo' if page.scheduled? %>
      <%= link_to "Edit", edit_page_path(page) %>
    <% end%>

  <% end %>

  
<% end %>

  <div id="sitenavigation">
    <li><%= link_to "-Archive-", pages_path, class: "linktext" %></li>
    <li><a class="linktext">-Ars Arcanum-</a></li>
    <li><a class="linktext">-Shop-</a></li>
  </div>
</div>

<div id="socials">
  <li><a class="linktext" id="patreon">Patreon</a></li>
  <li><a class="linktext" id="twitch">Twitch</a></li>
  <li><a class="linktext" id="twitter">Twitter</a></li>
  <li><a class="linktext" id="instagram">Instagram</a></li>
</div>

<% if admin_signed_in? %>
<%= link_to "Edit", edit_page_path(@page), id: "editfromshow" %>
<% end %>

</div>

<%# fullwrap end %>
</div>

<% if admin_signed_in? %>
  <div><%= link_to "New chapter", new_chapter_path %></div>
<% end %>

<% @chapters.sorted.each do |chapter| %>
  <div><%= "#{chapter.chapter_number} - #{chapter.name}" %></div>
  <% if admin_signed_in? %>
  <div><%= link_to "Edit", edit_chapter_path(chapter) %></div><br>
  <% end %>

  <% chapter.pages.sorted.each do |page| %>
    
    <% if page.invalid? %>
      <% next %>
    <% end %>

    <% if page.draft? && admin_signed_in? %>
      <p>Draft</p>
    <% elsif page.draft? %>
      <% next %>
    <% end %>

    <% if page.scheduled? && admin_signed_in? %>
      <p>Scheduled</p>
    <% elsif page.scheduled? %>
      <% next %>
    <% end %>

    <div><%= link_to image_tag(page.page_image.representation(resize_to_limit: [100, 100])), page %></div>
    <div><%= link_to page.page_number, page %></div>
    <% if admin_signed_in? %>
    <div><%= link_to "Edit", edit_page_path(page) %></div>
    <% end%>

  <% end %>
<% end %>

<% if admin_signed_in? %>
  <%= link_to "New page", new_page_path %>
  <% @pages.each do |page|%>
    <% if page.invalid?%>
      <%= link_to "Invalid page. Page number: #{page.page_number}. Click to edit", edit_page_path(page)%>
    <% end %>
  <% end %>
<% end %>