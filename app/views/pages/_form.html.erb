<%= form_with model: page do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% page.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% page.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>  

  <div>
    <%= form.submit %>
  </div>
<% end %>